<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_flag"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Country Name"
        android:id="@+id/textView_countryName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_flag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView_price"
        android:layout_margin="5dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Population: ..."
        android:id="@+id/textView_price"
        android:layout_alignBottom="@+id/imageView_flag"
        android:layout_alignLeft="@+id/textView_countryName"
        android:layout_alignStart="@+id/textView_countryName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="dsads: ..."
        android:id="@+id/textView_desc"
        android:layout_below="@id/textView_price"

        android:layout_alignLeft="@+id/textView_price"
        android:layout_alignStart="@+id/textView_price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />

    <EditText
        android:id="@+id/edt_month"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMinus"
        android:layout_alignBottom="@+id/btnMinus"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/btnMinus"
        android:layout_toRightOf="@+id/btnMinus"
        android:inputType="number"
        android:text="1" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edt_month"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/edt_month"
        android:layout_toRightOf="@+id/edt_month"
        android:text="+" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_desc"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/tvData"
        android:layout_toRightOf="@+id/tvData"
        android:text="-" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_flag"
        android:layout_alignStart="@+id/imageView_flag"
        android:layout_alignTop="@+id/bDodaj"
        android:text="Data"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bDodaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMinus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Dodaj do koszyka" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPlus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Username"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvPLN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_price"
        android:layout_alignBottom="@+id/textView_price"
        android:layout_alignLeft="@+id/edt_month"
        android:layout_alignStart="@+id/edt_month"
        android:text="PLN" />

</RelativeLayout>